<?xml version="1.0" encoding="UTF-8"?>
<site>
	<config>
		<field-set name="basics">
			<label>Basics</label>
			<items>
				<input name="url" type="TextLine">
					<label>Account root URL</label>
					<occurrences minimum="0" maximum="1"/>
				</input>
			</items>
		</field-set>
		<field-set name="credentials">
			<label>Credentials</label>
			<items>
				<input name="user" type="TextLine">
					<label>User (email)</label>
					<occurrences minimum="0" maximum="1"/>
				</input>
				<input name="password" type="TextLine">
					<label>Password</label>
					<occurrences minimum="0" maximum="1"/>
				</input>
			</items>
		</field-set>
		<field-set name="oauth2">
			<label>OAuth2</label>
			<items>
				<input name="clientId" type="TextLine">
					<label>Client ID</label>
					<occurrences minimum="0" maximum="1"/>
				</input>
				<input name="clientSecret" type="TextLine">
					<label>Client Secret</label>
					<occurrences minimum="0" maximum="1"/>
				</input>
			</items>
		</field-set>
	</config>

	<mappings>
		<mapping controller="/services/clients/clients.js" order="10">
			<pattern>/harvest/clients</pattern>
		</mapping>
	</mappings>
</site>
