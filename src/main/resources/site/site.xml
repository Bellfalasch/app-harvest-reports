<?xml version="1.0" encoding="UTF-8"?>
<site>
	<config>
		<field-set name="token">
			<label>API v2 - Personal Token</label>
			<items>
				<input name="token" type="TextLine">
					<label>Token</label>
					<occurrences minimum="0" maximum="1"/>
				</input>
				<input name="account" type="TextLine">
					<label>Account ID</label>
					<occurrences minimum="0" maximum="1"/>
				</input>
			</items>
		</field-set>
	</config>

	<mappings>
		<mapping controller="/services/clients/clients.js" order="10">
			<pattern>/harvest/clients</pattern>
		</mapping>
		<mapping controller="/services/contacts/contacts.js" order="10">
			<pattern>/harvest/contacts</pattern>
		</mapping>
	</mappings>
</site>
